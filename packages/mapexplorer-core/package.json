{
  "name": "@indigoframework/mapexplorer-core",
  "version": "0.1.0",
  "description": "Core library for building Map Explorer components",
  "main": "lib/mapexplorer-core.js",
  "module": "lib/mapexplorer-core.mjs",
  "scripts": {
    "test:unit":
      "mocha --compilers js:babel-register  --require should test/unit/*",
    "test:unit:ci":
      "nyc npm run test:unit && nyc report --reporter=text-lcov > coverage.lcov",
    "test:integration": "karma start karma.conf.js",
    "test:integration:ci": "npm run test:integration -- --single-run",
    "test": "npm run test:unit && npm run test:integration",
    "test:ci": "npm run test:unit:ci && npm run test:integration:ci",
    "build":
      "rollup -c rollup.npm.config.js && rollup -c rollup.browser.config.js",
    "prepublish": "npm run build",
    "postpublish":
      "aws s3 cp dist/mapexplorer-core.js s3://stratumn-libs/mapexplorer-core.js --region 'eu-west-1' && aws s3 cp dist/mapexplorer-core.js s3://stratumn-libs/mapexplorer-core-${npm_package_version}.js --region 'eu-west-1'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stratumn/indigo-js.git"
  },
  "keywords": ["stratumn", "blockchain", "mapexplorer", "chainscript"],
  "author": "Stratumn Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stratumn/indigo-js/issues"
  },
  "homepage": "https://github.com/stratumn/indigo-js",
  "devDependencies": {
    "@indigoframework/agent": "^0.1.0",
    "@metahub/karma-rollup-preprocessor": "^3.0.0",
    "babel-cli": "^6.5.1",
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-register": "^6.11.6",
    "babelrc-rollup": "^3.0.0",
    "crypto-browserify": "^3.11.0",
    "karma": "^1.1.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-should": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "mocha": "^2.4.5",
    "nyc": "^11.2.1",
    "rimraf": "^2.5.2",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.0.0",
    "rollup-plugin-istanbul": "^1.1.0",
    "rollup-plugin-json": "^2.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "should": "^8.2.2",
    "zock": "^0.2.6"
  },
  "dependencies": {
    "@indigoframework/client": "^0.1.0",
    "d3-array": "^1.0.0",
    "d3-ease": "^1.0.0",
    "d3-hierarchy": "^1.0.0",
    "d3-selection": "^1.0.0",
    "d3-transition": "^1.0.1",
    "d3-zoom": "^1.0.2"
  }
}
