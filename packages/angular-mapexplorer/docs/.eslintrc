{
  "extends": "airbnb/base",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "comma-dangle": 0,
    "no-console": 0,
    // Decorators :(
    "new-cap": 0,
    //Temporarirly disabled due to a possible bug in babel-eslint (todomvc example)
    "block-scoped-var": 0,
    // Temporarily disabled for test/* until babel/babel-eslint#33 is resolved
    "padded-blocks": 0,
    "no-param-reassign": 0,
    "no-use-before-define": 0
  },
  "globals": {
    "angular": false,
    "MapexplorerCore": false,
    "d3": false
  }
}
