{
  "extends": ["airbnb", "prettier", "prettier/react", "prettier/standard"],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "plugins": ["prettier"],
  "rules": {
    "no-console": 0,
    "object-shorthand": 0,
    "no-param-reassign": [
      2,
      {
        "props": false
      }
    ],
    "react/jsx-filename-extension": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["**/test/**"],
        "optionalDependencies": false
      }
    ],
    "import/extensions": [
      "error",
      "always",
      {
        "js": "never",
        "jsx": "never",
        "mjs": "never"
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      }
    ]
  }
}
